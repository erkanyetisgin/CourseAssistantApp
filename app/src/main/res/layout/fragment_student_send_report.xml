<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_report_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rapor Gönder"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        />

    <TextView
        android:id="@+id/text_scope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kapsam:"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/edit_scope"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/text_course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ders Adı:"
        android:textColor="@color/black"
        />

    <Spinner
        android:id="@+id/spinner_course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/text_recipient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alıcı:"
        android:textColor="@color/black" />

    <Spinner
        android:id="@+id/spinner_recipient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/text_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konu:"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/edit_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/text_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İçerik:"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/edit_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/button_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gönder"
        android:layout_gravity="center"
        />

</LinearLayout>
